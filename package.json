{
  "name": "ts-lib-template",
  "description": "A hassle-free TS library template.",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "scripts": {
    "bootstrap": "pnpm i --prefer-offline",
    "clean": "rm -rf cjs esm",
    "dev": "rslib build --watch",
    "build": "rslib build",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "quick-publish"
  },
  "devDependencies": {
    "@types/jest": "28.1.7",
    "@types/node": "18.7.6",
    "@vitest/coverage-v8": "3.1.2",
    "vitest": "3.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "quick-publish": "0.6.0",
    "@rslib/core": "0.6.7",
    "typescript": "5.8.3"
  },
  "files": [
    "bin",
    "esm",
    "!esm/*.tsbuildinfo",
    "!esm/*.map",
    "lib",
    "!lib/*.tsbuildinfo",
    "!lib/*.map",
    "types",
    "*.d.ts"
  ]
}