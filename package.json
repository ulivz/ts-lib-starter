{
  "name": "ts-lib-template",
  "description": "A hassle-free TS library template.",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "scripts": {
    "bootstrap": "pnpm i --prefer-offline",
    "clean": "rm -rf cjs esm",
    "dev": "rslib build --watch",
    "build": "rslib build",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "quick-publish"
  },
  "devDependencies": {
    "@rslib/core": "0.6.9",
    "@types/node": "22.15.17",
    "@vitest/coverage-v8": "3.1.3",
    "prettier": "3.5.3",
    "quick-publish": "0.7.1",
    "typescript": "5.8.3",
    "vitest": "3.1.3"
  },
  "files": [
    "dist"
  ]
}